<% if user_signed_in? && current_user != user %>
  <% if current_user.active_relationships.exists?(followed_id: user.id) %>
    <%= link_to 'unfollow', [user, :relationship], method: :delete, class: 'btn btn-info' %>
  <% else %>
    <%= link_to 'follow', [user, :relationship], method: :post, class: 'btn btn-success'%>
  <% end %>
<% end %>